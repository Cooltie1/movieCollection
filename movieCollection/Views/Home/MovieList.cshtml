@{
    ViewData["Title"] = "Movie List";
}

@model List<Movie>
<h1>My Movies</h1>

<table class="table table-bordered table-striped">
    <thead>
        <tr>
            <td>Title</td>
            <td>Category</td>
            <td>Year</td>
            <td>Director</td>
            <td>Rating</td>
            <td>Edited</td>
            <td>Lent To</td>
            <td>Notes</td>
        </tr>
    </thead>
    <tbody>
        @foreach (Movie movie in Model)
        {
        <tr>
            <td>@movie.title</td>
            <td>@movie.category.categoryName</td>
            <td>@movie.year</td>
            <td>@movie.director</td>
            <td>@movie.rating</td>
            <td>@movie.edited</td>
            <td>@movie.lentTo</td>
            <td>@movie.notes</td>
            
            <td><a class="btn btn-outline-primary" asp-controller="Home" asp-action="Edit" asp-route-movieid="@movie.movieID">Edit</a></td>
            <td><a class="btn btn-danger" asp-controller="Home" asp-action="Delete" asp-route-movieid="@movie.movieID">Delete</a></td>
        </tr>
            
        }
     </tbody>
</table>