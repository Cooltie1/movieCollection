@{
    ViewData["Title"] = "Movie Form";
}

@model movieCollection.Models.Movie


<form method="post">
    <div class="form-row">
        <div class="form-group col-md-6">
            <label asp-for="title">Title</label>
            <input class="form-control" id="inputTitle" placeholder="Batman" asp-for="title">
        </div>
        <div class="form-group col-md-2">
            <label asp-for="year">Year</label>
            <input class="form-control" id="inputYear" placeholder="1989" asp-for="year">
        </div>
    </div>
    <div class="form-row">
        <div class="form-group col-md-6">
            <label asp-for="category">Category</label>
            <select class="form-control" id="inputCategory" asp-for="categoryID">
                <option></option>
                @foreach (Category category in ViewBag.categories)
                {
                   <option value="@category.categoryID">@category.categoryName</option>
                }
            </select>
        </div>
        <div class="form-group col-md-4">
            <label asp-for="director">Director</label>
            <input class="form-control" id="inputDirector" placeholder="Tim Burton" asp-for="director">
        </div>
    </div>
    <div class="form-row">
        <div class="form-group col-md-4">
            <label asp-for="rating">Rating</label>
            <select id="inputRating" class="form-control" asp-for="rating">
                <option></option>
                <option>G</option>
                <option>PG</option>
                <option>PG-13</option>
                <option>R</option>
            </select>
        </div>

        <div class="form-group col-md-4">
            <label asp-for="lentTo">Lent to</label>
            <input class="form-control" id="inputLentTo" placeholder="Tom" asp-for="lentTo">
        </div>
    </div>
    <div class="form-check">
        @Html.RadioButtonFor(model => model.edited, true) Movie has been edited
    </div>
    <div class="form-check">
        @Html.RadioButtonFor(model => model.edited, false) Movie has not been edited
    </div>
    <div class="form-group">
        <label asp-for="notes">Notes</label>
        <input class="form-control" id="inputNotes" placeholder="A very Interesting movie" asp-for="notes">
    </div>
    <button type="submit" class="btn btn-primary">Submit</button>
    <div asp-validation-summary="All"></div>
</form>